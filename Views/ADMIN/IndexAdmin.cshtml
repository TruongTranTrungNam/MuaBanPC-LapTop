@model IEnumerable<MuaBanPC_LapTop.Models.DonHang>

@{ 
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />

    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">

    <div id="layoutSidenav">

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Khu Vực Admin</h1>
                    <p class="btn btn-success">
                        <a style="text-decoration:none;color:white" asp-controller="DonHangs" asp-action="Create">Tạo mới SP</a>
                    </p>


                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Quản lý Sản phẩm
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>Tên SP</th>
                                        <th>Cấu Hinh</th>
                                        <th>Số lượng</th>
                                        <th>Giá Tiền</th>
                                        <th>Hình Ảnh</th>

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Tên SP</th>
                                        <th>Cấu Hinh</th>
                                        <th>Số lượng</th>
                                        <th>Giá Tiền</th>
                                        <th>Hình Ảnh</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CauHinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuong)
                            </td>
                            <td>

                                @String.Format(format, "{0:c0}", item.GiaTien)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.ProfilePicture)*@
                                <img src="@item.ProfilePicture" asp-append-version="true" height="100" width="100" />
                            </td>
                            <td>
                                <a style="color: blue; text-decoration: none" asp-controller="DonHangs" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>|<a style="color: red; text-decoration: none" asp-controller="DonHangs" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>

                            </td>
                        </tr>}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/demo/chart-area-demo.js"></script>
    <script src="~/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/js/datatables-simple-demo.js"></script>
</body>
</html>
