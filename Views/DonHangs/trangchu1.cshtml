<!-- slider image start -->
<div class="slider">
    <div class="slides">
        <!-- radio button start -->
        <input type="radio" name="radio-btn" id="radio1">
        <input type="radio" name="radio-btn" id="radio2">
        <input type="radio" name="radio-btn" id="radio3">
        <input type="radio" name="radio-btn" id="radio4">
        <!-- radio button end -->
        <!-- slider images start -->
        <div class="slide first">
            <img src="https://blogchiasekienthuc.com/wp-content/uploads/2021/05/cung-mot-cau-hinh-ma-laptop-lai-yeu-hon-pc-1.png">
        </div>
        <div class="slide">
            <img src="https://trangnguyencantho.com/wp-content/uploads/2020/10/bia-3-800x600.png">
        </div>

        <div class="slide">
            <img src="https://cdn.techzones.vn/Data/Sites/1/News/3285/techzones-nhung-mau-laptop-gaming-choi-game-co-tan-nhiet-tot-nhat-tren-thi-truong.jpg">
        </div>
        <div class="slide">
            <img src="https://genk.mediacdn.vn/2018/8/15/03inuse-1-1534392883894706312364.jpg">
        </div>
        <!-- slider imgaes end -->
        <!-- atomat navigation start -->
        <div class="navigation-auto">
            <div class="auto-btn1"></div>
            <div class="auto-btn2"></div>
            <div class="auto-btn3"></div>
            <div class="auto-btn4"></div>
        </div>
        <!-- atomat navigation end -->
    </div>
    <!-- manual navigation start -->
    <div class="navigation-manual">
        <label for="radio1" class="manual-btn"></label>
        <label for="radio2" class="manual-btn"></label>
        <label for="radio3" class="manual-btn"></label>
        <label for="radio4" class="manual-btn"></label>

    </div>
    <!-- manual navigation end -->
</div>
<!-- slider image end -->
<script type="text/javascript">
    var counter = 1;
    setInterval(function () {
        document.getElementById('radio' + counter).checked = true;
        counter++;
        if (counter > 4) {
            counter = 1;
        }
    }, 4000);
</script>



