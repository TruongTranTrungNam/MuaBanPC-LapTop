@model MuaBanPC_LapTop.Models.DonHang

@{
    ViewData["Title"] = "Xóa";
}


<h3>Bạn có muốn xóa đơn hàng ?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt class = "col-sm-2">
            Ngày mua
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayMua)
        </dd>
        <dt class = "col-sm-2">
            Số lượng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt class = "col-sm-2">
           Giá tiền
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaTien)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>
